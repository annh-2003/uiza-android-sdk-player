<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="vn.uiza">

    <application
        android:allowBackup="true"
        android:label="@string/app_name">

        <service
            android:name=".uzv3.view.floatview.FUZVideoService"
            android:enabled="true"
            android:exported="false" />

        <receiver
            android:name=".uzv3.FloatClickFullScreenReceiverV3"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="FLOAT_CLICKED_FULLSCREEN_V3" />
            </intent-filter>
        </receiver>

        <!--START CHROMECAST-->
        <meta-data
            android:name="com.google.android.gms.cast.framework.OPTIONS_PROVIDER_CLASS_NAME"
            android:value="vn.uiza.chromecast.CastOptionsProvider" />
        <activity
            android:name=".chromecast.ExpandedControlsActivity"
            android:theme="@style/Theme.CastVideosDark" />
        <!--STOP CHROMECAST-->
    </application>

</manifest>
